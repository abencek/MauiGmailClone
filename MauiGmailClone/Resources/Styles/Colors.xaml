<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!--Colors-->
    <Color x:Key="PrimaryColor">#166AF2</Color>
    <Color x:Key="PrimaryLightColor">#C3E8FD</Color>
    <Color x:Key="PrimaryVeryLightColor">#EEF3FB</Color>
    <Color x:Key="SecondaryColor">#b3261e</Color>
    <Color x:Key="GrayDarkColor">#2F2F2F</Color>
    <Color x:Key="GrayLightColor">#B0B0B0</Color>
    <Color x:Key="GrayVeryLightColor">#EAEAEA</Color>
    <Color x:Key="BackgroundLightColor">#FFFFFF</Color>

    <!--Brushes-->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="{StaticResource PrimaryLightColor}"/>
    <SolidColorBrush x:Key="PrimaryVeryLightBrush" Color="{StaticResource PrimaryVeryLightColor}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}"/>
    <SolidColorBrush x:Key="GrayDarkBrush" Color="{StaticResource GrayDarkColor}"/>
    <SolidColorBrush x:Key="GrayLightBrush" Color="{StaticResource GrayLightColor}"/>
    <SolidColorBrush x:Key="GrayCVeryLightBrush" Color="{StaticResource GrayVeryLightColor}"/>

</ResourceDictionary>